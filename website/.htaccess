# Enable mod_rewrite
RewriteEngine On

# Force HTTPS for every request
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# REDIRECT TO MAIN PAGE
RewriteCond %{HTTP_HOST} ^abscissa\.rf\.gd$ [NC]
RewriteRule ^$ /content/dashboard.php [L,R=302]

# LIMIT CACHING TO 24H
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 day"
</IfModule>

# SET ERROR PAGES
ErrorDocument 400 /content/error.php?errorCode=400
ErrorDocument 401 /content/error.php?errorCode=401
ErrorDocument 403 /content/error.php?errorCode=403
ErrorDocument 404 /content/error.php?errorCode=404
ErrorDocument 500 /content/error.php?errorCode=500
ErrorDocument 503 /content/error.php?errorCode=503